{
  "manifest_version": 2,

  "name": "I Hate This Election!",
  "description": "This extension will remove anything election related from your feed",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://www.facebook.com/*",
    "http://www.facebook.com/*"
  ],
  "content_scripts": [ {
  "matches": ["https://www.facebook.com/*","http://www.facebook.com/*"],
  "js": ["content.js","jquery-3.1.1.min.js", "gifs.js"],
  "css": ["style.css"]
} ],
  "background":{
    "scripts": ["background.js", "jquery-3.1.1.min.js"]
  },
  "web_accessible_resources": [
    "templates/counter.html",
    "images/*.png"
  ]
}
